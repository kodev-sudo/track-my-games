{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid">
  <div class="row">
    {% for game in games %}
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <a href="{{ path('app_game_details', {'id': game.id}) }}">
      <div class="card mb-4 mt-4 black-overlay">
        <img src="{{ game.backgroundImage }}" class="card-img" alt="{{ game.name }}">
        <div class="card-img-overlay card-overlay align-items-center justify-content-center d-flex">
          <img style="max-width:100%; max-height:100%;" src="{{ game.logo }}" alt="{{ game.name }}">
        </div>
      </div>
      </a>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}